<!-- views/myblog.hbs -->

<style>
  .posts {
    display: grid;
    grid-template-columns: auto auto auto;
  }

  .post {
    width: 500px;
    margin: 40px 15px 20px 15px;
  }

  .postImg {
    width: 460px;
    height: 320px;
    object-fit: cover;
    border-radius: 7px;
  }

  .postTitle {
    font-family: "Josefin Sans", Arial, Helvetica, sans-serif;
    font-size: 24px;
    font-weight: 900;
    margin-top: 15px;
    cursor: pointer;
  }

  .postAuthor {
    font-family: "Varela Round", Arial, Helvetica, sans-serif;
    font-weight: 400;
    font-size: 14px;
    margin-top: 10px;
    color: #888; /* Adjust the color as needed */
  }
</style>
<div class="posts">
  {{#each blogs as |blog|}}
    <div class="post">
      {{#if blog.imagePath}}
        <img class="postImg" src="{{blog.imagePath}}" alt="{{blog.title}}">
      {{/if}}
      {{#if blog.title}}
        <h3 class="postTitle">{{blog.title}}</h3>
      {{/if}}
      {{#if blog.content}}
        <p class="postDesc">{{blog.content}}</p>
      {{/if}}
      {{#if blog.author}}
        <p class="postAuthor">Author: {{blog.author.username}} </p>
      {{else}}
        <p class="postAuthor">Author: Not Available</p>
      {{/if}}
    </div>
  {{/each}}
</div>

